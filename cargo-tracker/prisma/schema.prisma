generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum forklift_status {
  WAITING_ORDER
  PROCESSING_ORDER
  ENDING_ORDER
}

enum order_status {
  CREATED
  PROCESSING
  DONE
}

model warehouse {
  id  String  @default(uuid())  @id

  name  String  @unique

  coordX  String?
  coordY  String?

  loaders forklift[]  
  sensors sensor[]
}

model order {
  id  String  @default(uuid()) @id

  status  order_status  @default(CREATED)
  created_at  DateTime  @default(now())
  ended_at    DateTime?

  forklift_name String
  warehouse_id  String
  forklift  forklift @relation(fields: [forklift_name, warehouse_id], references: [name, warehouse_id])

  path_id String
  path  path  @relation(fields: [path_id], references: [id])

  check_points_time forklift_step[]
}

model forklift_step {
  id  String  @default(uuid()) @id
  point_name  String
  time  DateTime

  order_id  String
  order order @relation(fields: [order_id], references: [id])
}

model forklift {
  id  String  @unique @default(uuid())
  name  String
  warehouse_id  String
  warehouse warehouse @relation(fields: [warehouse_id], references: [id])
  status  forklift_status @default(WAITING_ORDER)
  orders  order[]
  last_tm_date  DateTime?
  next_tm_date  DateTime?

  average_speed Int?

  @@id([name, warehouse_id])
}

model path {
  id  String  @default(uuid()) @id
  target_name String  @unique
  check_points  check_point[]

  orders  order[]
}

model check_point {
  id  String  @default(uuid()) @id
  name  String
  next_check_point_distance Int

  path_id String
  path  path  @relation(fields: [path_id], references: [id])
}

model sensor {
  id  String  @default(uuid()) @id
  name  String @unique

  warehouse_id  String
  warehouse warehouse @relation(fields: [warehouse_id], references: [id])
}
